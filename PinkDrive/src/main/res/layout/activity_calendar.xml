<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nunens.pinkd.pink.CalendarActivity"
    android:background="@drawable/background2">

    <Button
        android:id="@+id/addCalender"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_style"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="50sp"/>

    <ListView
        android:id="@+id/previoustCalenders"
        android:layout_below="@+id/addCalender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></ListView>
    <CalendarView
        android:id="@+id/calenderPicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightPink"
        android:weekSeparatorLineColor="@color/DeepPink"
        android:showWeekNumber="false"
        android:unfocusedMonthDateColor="@color/black"
        android:focusedMonthDateColor="@color/white"
        android:visibility="visible"/>

</RelativeLayout>
