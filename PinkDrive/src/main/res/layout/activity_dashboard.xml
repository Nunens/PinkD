<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pinkd.pinkdadmin.Dashboard">

    <RelativeLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/eventMenu"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/eventbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="30dp"
                android:src="@drawable/game" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/calenderMenu"
            android:layout_width="190dp"
            android:layout_height="155dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/calenderbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="30dp"
                android:src="@drawable/calender2" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp">

        <RelativeLayout
            android:id="@+id/tutsMenu"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:background="@drawable/tutorialbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:src="@drawable/tutorial" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mythMenu"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/mythbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:paddingBottom="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/myth" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thirdRow"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="305dp">

        <RelativeLayout
            android:id="@+id/howtoMenu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/howtobg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/howto" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fourthRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp">

        <RelativeLayout
            android:id="@+id/experienceMenu"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/experiencebg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:src="@drawable/experience" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/learnMenu"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/learnbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/learn" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qaMenu"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/qabg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/qa" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:padding="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gogo" />
        <TextView
            android:id="@+id/mythGogo"
            android:layout_width="150dp"
            android:padding="9dp"
            android:layout_marginTop="130dp"
            android:text="did you know that Man was so cool it hurts???"
            android:layout_height="wrap_content"
            android:textColor="@color/DeepPink"
            android:background="@drawable/experiencebg"/>
    </RelativeLayout>
</RelativeLayout>
