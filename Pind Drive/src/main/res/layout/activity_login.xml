<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinkd.pinkdrive.LoginActivity"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/pinkdlogo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        style="@style/Logo"/>
    <EditText
        android:id="@+id/loginEmail"
        android:inputType="textEmailAddress"
        style="@style/EditText"
        android:hint="Enter email"
        android:text=""
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/loginLogo"
        android:singleLine="true"
        android:textColor="@color/white"
        android:background="@color/HotPink"/>
    <EditText
        android:id="@+id/loginPassword"
        android:inputType="textEmailAddress"
        android:hint="Enter password"
        android:singleLine="true"
        android:text=""
        style="@style/EditText"
        android:layout_below="@+id/loginEmail"
        android:textColor="@color/white"
        android:background="@color/HotPink"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtn"
        android:layout_below="@+id/loginPassword"
        android:text="LOGIN"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@color/DeepPink"/>
    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:background="@drawable/circle_style"/>
    <ImageView
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/mtn" />
</RelativeLayout>
