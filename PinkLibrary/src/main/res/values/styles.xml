<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/button_color</item>
        <item name="android:windowTitleStyle">@style/Theme.MyDialog.Title</item>
    </style>

    <style name="Theme.MyDialog.Title">
        <item name="android:background">@drawable/header</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme" parent="MyTheme.ActionBar.TitleTextStyle">
        <!-- Customize your theme here. -->
    </style>
    <style name="headerStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="headerImageStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="EditText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/textfields</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="Button" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/DeepPink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">00dp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="Logo" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="TextViewPinkRound" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/circle_style</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>