<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    tools:context="com.pinkd.pinkdadmin.LoginActivity"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:src="@drawable/ic_launcher"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        style="@style/Logo"/>
    <EditText
        android:id="@+id/examStage"
        android:hint="Stage"
        android:layout_below="@+id/loginLogo"
        style="@style/EditText"/>
    <EditText
        android:id="@+id/examContent"
        android:hint="Content"
        android:layout_below="@+id/examStage"
        style="@style/EditText"/>
    <EditText
        android:id="@+id/examNote"
        android:hint="Note"
        android:maxLines="10"
        android:layout_below="@+id/examContent"
        style="@style/EditText"/>
    <EditText
        android:id="@+id/examNoteContent"
        android:hint="Note Content"
        android:maxLines="10"
        android:layout_below="@+id/examNote"
        style="@style/EditText"/>
    <Button
        android:id="@+id/examBtn"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:text="ADD EXAM"/>

</RelativeLayout>
