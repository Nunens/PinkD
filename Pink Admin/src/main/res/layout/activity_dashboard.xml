<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="com.pinkd.pinkdadmin.Dashboard"
    android:background="@drawable/background2">

    <RelativeLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/eventMenu"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/eventbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="30dp"
                android:src="@drawable/event" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/calenderMenu"
            android:layout_width="190dp"
            android:layout_height="155dp"
            android:background="@drawable/calenderbg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="30dp"
                android:src="@drawable/calender" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/secondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp">

        <RelativeLayout
            android:id="@+id/tutsMenu"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:background="@drawable/tutorialbg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:src="@drawable/tutorial" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mythMenu"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:background="@drawable/mythbg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/myth" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/thirdRow"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="305dp">

        <RelativeLayout
            android:id="@+id/howtoMenu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/howtobg"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/howto" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fourthRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp">

        <RelativeLayout
            android:id="@+id/experienceMenu"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/experiencebg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:src="@drawable/experience" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/learnMenu"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:background="@drawable/learnbg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/learn" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/qaMenu"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/qabg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/qa" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
