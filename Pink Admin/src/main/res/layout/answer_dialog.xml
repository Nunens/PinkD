<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/dialogLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/dialogQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogLogo"
        android:textSize="26dp"
        android:textColor="@color/DeepPink"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/dialogAnswer"
        style="@style/EditText"
        android:hint="Answer"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/dialogQuestion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@color/white">

        <Button
            android:id="@+id/dialogAnswerBtn"
            android:text="POST"
            style="@style/Button"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dialogCancelBtn"
            android:text="CANCEL"
            style="@style/Button"
            android:background="@color/white"
            android:textColor="@color/DeepPink"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
